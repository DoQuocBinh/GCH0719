<body>
    <h1>Add product</h1>
    <div class="form-group" style="margin-left: 60px;width:100%">
            <form action="/doAddProduct" method="post">
            <table>
            <tr>
                <td>Id</td>
                <td><input class="form-control" type="text" name="txtId" value="{{oldValues.id}}"></td>
            </tr>
            <tr>
                <td>Name</td>
                <td> 
                    <input class="form-control" type="text" name="txtName" value="{{oldValues.name}}">
                    <span class="errorText">{{error.nameError}}</span>
                </td>
            </tr>
            <tr>
                <td>Price</td>
                <td><input class="form-control" type="text" name="Price" value="{{oldValues.price}}"></td>
            </tr>
            <tr align="right">
                <td colspan="2"><input class="btn btn-primary" type="submit" value="Add Product"/></td>          
            </tr>
        </table>    
        </form>
    </div>
    
